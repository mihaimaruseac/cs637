<h1>Listing enrolments</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Price</th>
    <th>Child</th>
    <th>Parent</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @enrolments.each do |enrolment| %>
  <tr>
    <td><%= enrolment.date %></td>
    <td><%= enrolment.price %></td>
    <td><%= enrolment.child_id %></td>
    <td><%= enrolment.parent_id %></td>
    <td><%= enrolment.course_id %></td>
    <td><%= link_to 'Show', enrolment %></td>
    <td><%= link_to 'Edit', edit_enrolment_path(enrolment) %></td>
    <td><%= link_to 'Destroy', enrolment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

