<% page_titling "Offered courses" %>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Limit</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th>Location</th>
    <th>Enrolled count</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to course.name, course %></td>
    <td><%= course.price %></td>
    <td><%= course.limit %></td>
    <td><%= course.startDate %></td>
    <td><%= course.endDate %></td>
    <td><%= course.location %></td>
    <td><%= course.enroled_count %></td>
    <td><%= course.short_description %></td>
  </tr>
<% end %>
</table>
